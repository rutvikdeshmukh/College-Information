<% layout('layouts/boilerplate.ejs') -%>
<div class="row">
  <div class="col-6 offset-3">
    <form
      action="/college/<%= record._id%>/update?_method=patch"
      method="post"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="college">College</label>
        <input
          type="text"
          class="form-control"
          id="college"
          name="student[college]"
          value="<%=record.college%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose a College.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="student[location]"
          value="<%=record.location%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose a location.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          type="text"
          class="form-control"
          id="description"
          name="student[description]"
          rows="3"
          cols="30"
          required
        >
<%=record.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose a description.</div>
      </div>

      <div class="mb-3">
        <div class="custom-file">
          <input
            type="file"
            class="custom-file-input"
            id="image"
            aria-describedby="inputGroupFileAddon01"
            name="image"
            multiple
          />
          <label class="custom-file-label" for="image">Choose Image's</label>
          <!-- <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please Upload the Image</div> -->
        </div>
      </div>
      <div class="mb-3">
        <%record.image.forEach((image,i)=>{%>
        <div class="mb-3">
          <img src="<%=image.thumbnail%>" class="img-thumbnail" alt="" />
        </div>
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=image.filename%>"
          />
        </div>
        <label for="image-<%=i%>"> delete?</label>
        <%})%>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update</button>
      </div>
    </form>

    <a href="/college/<%=record._id%>"> Back To College</a>
  </div>
</div>
