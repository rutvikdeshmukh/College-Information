<% layout('layouts/boilerplate.ejs') -%>
<div id="map" class="mb-3" style="width: 100%; height: 300px"></div>

<div class="mb-3">
  <a href="/college/new"> <b>Add New College</b></a>
</div>

<% for(let record of findData) { %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <%record.image.forEach((image,i)=>{%>
          <div class="carousel-item <%= i==0 ? "active" : "" %>">
            <img src="<%=image.path%>" class="d-block w-100" alt="">
          </div>
          <%})%>
        </div>
         <% if(record.image.length > 1){ %>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      <%}%>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= record.college %></h5>
        <p class="card-text">
          <small class="text-muted"><%= record.location%></small>
        </p>
        <p class="card-text">
          <small class="text-muted"><%= record.description%></small>
        </p>

        <a class="btn btn-primary" href="/college/<%=record._id %>"
          >View <%=record.college%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
<script>
  const mapboxToken = "<%-process.env.MAPBOX_TOKEN%>";
   const colleges= { features: <%-JSON.stringify(findData)%>};

</script>

<script src="/javascripts/clusterMap.js"></script>
