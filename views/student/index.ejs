<% layout('layouts/boilerplate.ejs') -%>
<div id="map" class="mb-3" style="width: 100%; height: 300px"></div>

<div class="mb-3">
  <a href="/college/new"> <b>Add New College</b></a>
</div>

<% for(let record of findData) { %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img src="<%=record.image[0].path%>" class="d-block w-100" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= record.college %></h5>
        <p class="card-text">
          <small class="text-muted"><%= record.location%></small>
        </p>
        <p class="card-text">
          <small class="text-muted"><%= record.description%></small>
        </p>

        <a class="btn btn-primary" href="/college/<%=record._id %>"
          >View <%=record.college%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
<script>
  const mapboxToken = "<%-process.env.MAPBOX_TOKEN%>";
   const colleges= { features: <%-JSON.stringify(findData)%>};
</script>

<script src="/javascripts/clusterMap.js"></script>
